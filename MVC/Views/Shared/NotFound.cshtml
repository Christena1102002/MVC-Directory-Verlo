@{
    ViewData["Title"] = "Page Not Found";
}

<div class="container">
    <div class="not-found-container">
        <div class="not-found-content">
            <div class="error-code">404</div>
            <h1 class="error-title">Page Not Found</h1>
            <p class="error-message">The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
            <div class="action-buttons">
                <a href="/" class="btn btn-primary btn-lg">
                    <i class="fas fa-home me-2"></i>Back to Home
                </a>
                <button onclick="goBack()" class="btn btn-outline-secondary btn-lg ms-3">
                    <i class="fas fa-arrow-left me-2"></i>Go Back
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .not-found-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
            text-align: center;
            padding: 2rem;
        }

        .not-found-content {
            max-width: 600px;
            animation: fadeIn 0.8s ease-in-out;
        }

        .error-code {
            font-size: 10rem;
            font-weight: 800;
            line-height: 1;
            background: linear-gradient(135deg, var(--primary-color) 0%, #6c5ce7 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            letter-spacing: -5px;
        }

        .error-title {
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: #333;
        }

        .error-message {
            font-size: 1.2rem;
            color: #6c757d;
            margin-bottom: 2.5rem;
            line-height: 1.6;
        }

        .action-buttons {
            margin-bottom: 2rem;
        }

        .btn-lg {
            padding: 0.8rem 2rem;
            font-weight: 500;
            border-radius: 50px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .btn-lg:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }

        .btn-outline-secondary {
            border-width: 2px;
        }

        /* Animation */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .error-code {
                font-size: 8rem;
            }
            
            .error-title {
                font-size: 2rem;
            }
            
            .error-message {
                font-size: 1rem;
            }
            
            .action-buttons {
                display: flex;
                flex-direction: column;
                gap: 1rem;
            }
            
            .btn-lg {
                width: 100%;
                margin-left: 0 !important;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
}
