@model mvc.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register Admin";
}

<style>
    .auth-container {
        min-height: calc(100vh - 160px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        background: linear-gradient(135deg, rgba(44, 62, 80, 0.95), rgba(52, 73, 94, 0.85)), 
                    url('/images/admin-bg.jpg');
        background-size: cover;
        background-attachment: fixed;
    }

    .auth-card {
        width: 100%;
        max-width: 550px;
        background-color: #fff;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        padding: 0;
        position: relative;
    }

    .auth-header {
        background: linear-gradient(135deg, #1a2a3a, #2c3e50);
        padding: 2.5rem 2rem 2rem;
        text-align: center;
        position: relative;
    }

    .auth-header::after {
        content: '';
        position: absolute;
        bottom: -20px;
        left: 0;
        right: 0;
        height: 40px;
        background: white;
        border-radius: 50% 50% 0 0;
    }

    .auth-logo {
        width: 85px;
        height: 85px;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        border-radius: 50%;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        border: 3px solid rgba(44, 62, 80, 0.3);
    }

    .auth-logo i {
        font-size: 2.5rem;
        color: #2c3e50;
    }

    .auth-title {
        color: white;
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .auth-subtitle {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1rem;
    }

    .auth-body {
        padding: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .form-input {
        width: 100%;
        padding: 0.75rem 1rem 0.75rem 3rem;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s;
    }

    .form-input:focus {
        border-color: #2c3e50;
        box-shadow: 0 0 0 0.2rem rgba(44, 62, 80, 0.25);
        outline: none;
    }

    .input-icon {
        position: absolute;
        left: 1rem;
        top: 42px;
        color: #7f8c8d;
    }

    .auth-btn {
        width: 100%;
        padding: 0.9rem;
        border: none;
        border-radius: 8px;
        background-color: #2c3e50;
        color: white;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        margin-top: 1rem;
    }

    .auth-btn:hover {
        background-color: #1a2a3a;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(26, 42, 58, 0.4);
    }

    .auth-footer {
        text-align: center;
        margin-top: 1.5rem;
        color: #7f8c8d;
        font-size: 0.95rem;
    }

    .auth-link {
        color: #2c3e50;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
    }

    .auth-link:hover {
        color: #1a2a3a;
        text-decoration: underline;
    }

    .validation-summary-errors {
        color: #e74c3c;
        background-color: rgba(231, 76, 60, 0.1);
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        border-left: 4px solid #e74c3c;
    }

    .validation-summary-errors ul {
        margin: 0;
        padding-left: 1.5rem;
    }

    .field-validation-error {
        color: #e74c3c;
        font-size: 0.9rem;
        margin-top: 0.3rem;
        display: block;
    }

    .input-validation-error {
        border-color: #e74c3c !important;
    }

    .input-validation-error:focus {
        box-shadow: 0 0 0 0.2rem rgba(231, 76, 60, 0.25) !important;
    }

    .form-row {
        display: flex;
        gap: 1rem;
        margin-bottom: 0;
    }

    .form-row .form-group {
        flex: 1;
    }

    .password-toggle {
        position: absolute;
        right: 1rem;
        top: 42px;
        color: #7f8c8d;
        cursor: pointer;
    }

    .terms-checkbox {
        display: flex;
        align-items: flex-start;
        margin-top: 1.5rem;
        padding: 1rem;
        background-color: rgba(44, 62, 80, 0.05);
        border-radius: 8px;
    }

    .terms-checkbox input {
        margin-right: 0.5rem;
        margin-top: 0.25rem;
    }

    .terms-checkbox label {
        margin-bottom: 0;
        font-size: 0.95rem;
        color: #2c3e50;
    }

    .secure-badge {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        background-color: rgba(44, 62, 80, 0.05);
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .secure-badge i {
        color: #2ecc71;
        margin-right: 0.5rem;
    }

    .secure-badge span {
        color: #2c3e50;
        font-size: 0.9rem;
        font-weight: 500;
    }

    @@media (max-width: 768px) {
        .form-row {
            flex-direction: column;
            gap: 0;
        }

        .auth-card {
            max-width: 450px;
        }
    }

    @@media (max-width: 576px) {
        .auth-card {
            border-radius: 0;
        }

        .auth-header {
            padding: 2rem 1.5rem 1.5rem;
        }

        .auth-body {
            padding: 1.5rem;
        }
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo">
                <i class="fas fa-user-shield"></i>
            </div>
            <h1 class="auth-title">Admin Registration</h1>
            <p class="auth-subtitle">Create a new administrator account</p>
        </div>

        <div class="auth-body">
            <div class="secure-badge">
                <i class="fas fa-shield-alt"></i>
                <span>This is a secure registration area for administrators only</span>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary-errors">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            }

            <form asp-action="RegisterAdmin" asp-controller="Account" method="post">
                <div class="form-group">
                    <label asp-for="Name">Admin Username</label>
                    <i class="fas fa-user-tie input-icon"></i>
                    <input asp-for="Name" class="form-input" placeholder="Choose an admin username">
                    <span asp-validation-for="Name" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <i class="fas fa-envelope input-icon"></i>
                    <input asp-for="Email" class="form-input" placeholder="Enter official email">
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address">Office Address</label>
                    <i class="fas fa-building input-icon"></i>
                    <input asp-for="Address" class="form-input" placeholder="Enter office address">
                    <span asp-validation-for="Address" class="field-validation-error"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Password" class="form-input" placeholder="Create a strong password" id="password">
                        <i class="fas fa-eye password-toggle" id="togglePassword"></i>
                        <span asp-validation-for="Password" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <i class="fas fa-key input-icon"></i>
                        <input asp-for="ConfirmPassword" class="form-input" placeholder="Confirm your password" id="confirmPassword">
                        <i class="fas fa-eye password-toggle" id="toggleConfirmPassword"></i>
                        <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="terms-checkbox">
                    <input type="checkbox" id="terms" required>
                    <label for="terms">I understand and accept the administrator responsibilities and agree to follow all security protocols and policies</label>
                </div>

                <button type="submit" class="auth-btn">Create Administrator Account</button>
            </form>

            <div class="auth-footer">
                <a href="/Account/LoginAdmin" class="auth-link">Already have an admin account? Sign In</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Password visibility toggle
        document.getElementById('togglePassword').addEventListener('click', function() {
            const password = document.getElementById('password');
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            
            // Toggle eye icon
            this.classList.toggle('fa-eye');
            this.classList.toggle('fa-eye-slash');
        });

        document.getElementById('toggleConfirmPassword').addEventListener('click', function() {
            const password = document.getElementById('confirmPassword');
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            
            // Toggle eye icon
            this.classList.toggle('fa-eye');
            this.classList.toggle('fa-eye-slash');
        });
    </script>
}

