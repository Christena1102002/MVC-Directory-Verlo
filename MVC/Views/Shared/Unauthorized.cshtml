@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="unauthorized-container">
        <div class="unauthorized-content">
            <div class="error-code">403</div>
            <h1 class="error-title">Access Denied</h1>
            <p class="error-message">You don't have permission to access this resource. Please log in or contact the administrator if you believe this is a mistake.</p>
            <div class="action-buttons">
                <a href="/Account/Login" class="btn btn-primary btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>Log In
                </a>
                <a href="/" class="btn btn-outline-primary btn-lg ms-3">
                    <i class="fas fa-home me-2"></i>Back to Home
                </a>
                <button onclick="goBack()" class="btn btn-outline-secondary btn-lg ms-3 d-none d-md-inline-block">
                    <i class="fas fa-arrow-left me-2"></i>Go Back
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .unauthorized-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
            text-align: center;
            padding: 2rem;
        }

        .unauthorized-content {
            max-width: 650px;
            animation: fadeIn 0.8s ease-in-out;
        }

        .error-code {
            font-size: 10rem;
            font-weight: 800;
            line-height: 1;
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            letter-spacing: -5px;
        }

        .error-title {
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: #333;
        }

        .error-message {
            font-size: 1.2rem;
            color: #6c757d;
            margin-bottom: 2.5rem;
            line-height: 1.6;
        }

        .action-buttons {
            margin-bottom: 2rem;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .btn-lg {
            padding: 0.8rem 2rem;
            font-weight: 500;
            border-radius: 50px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .btn-lg:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }

        .btn-outline-secondary, .btn-outline-primary {
            border-width: 2px;
        }

        /* Lock icon animation */
        .lock-icon {
            font-size: 4rem;
            color: #e74c3c;
            margin-bottom: 1.5rem;
            display: inline-block;
            animation: wiggle 2s ease-in-out infinite;
        }

        @@keyframes wiggle {
            0%, 100% { transform: rotate(0); }
            25% { transform: rotate(-10deg); }
            75% { transform: rotate(10deg); }
        }

        /* Fade-in animation */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .error-code {
                font-size: 8rem;
            }
            
            .error-title {
                font-size: 2rem;
            }
            
            .error-message {
                font-size: 1rem;
            }
            
            .action-buttons {
                flex-direction: column;
            }
            
            .btn-lg {
                width: 100%;
                margin-left: 0 !important;
                margin-right: 0 !important;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
}
