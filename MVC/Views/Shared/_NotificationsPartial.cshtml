@using Microsoft.AspNetCore.Identity
@inject SignInManager<mvc.Models.Authorize.ApplicationUser> SignInManager
@inject UserManager<mvc.Models.Authorize.ApplicationUser> UserManager

@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle position-relative" href="#" id="notificationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-bell"></i>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger notification-count d-none">
                0
                <span class="visually-hidden">New notifications</span>
            </span>
        </a>
        <div class="dropdown-menu dropdown-menu-end p-0 notification-dropdown" aria-labelledby="notificationsDropdown">
            <div class="dropdown-header bg-primary text-white p-3">
                <h6 class="m-0 d-flex justify-content-between align-items-center">
                    <span><i class="fas fa-bell me-2"></i>Notifications</span>
                    <a href="#" class="text-white btn-mark-all-read" title="Mark all as read">
                        <i class="fas fa-check-double"></i>
                    </a>
                </h6>
            </div>
            
            <div id="notificationList">
                <div class="text-center py-4">
                    <div class="spinner-border spinner-border-sm text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
            
            <div class="dropdown-divider m-0"></div>
            <a class="dropdown-item text-center py-2 view-all-notifications" href="/Notifications">
                <i class="fas fa-list me-1"></i> View All Notifications
            </a>
        </div>
    </li>
}
