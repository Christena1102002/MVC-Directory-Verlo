@model Chat

@{
    ViewData["Title"] = "Send Message";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f0f0;
        }

        .chat-container {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 20px;
            max-width: 600px;
            margin: 50px auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 24px;
            text-align: center;
            margin-bottom: 20px;
        }

        .message-box {
            margin-bottom: 20px;
        }

            .message-box label {
                font-weight: bold;
            }

            .message-box input, .message-box textarea {
                width: 100%;
                padding: 10px;
                border-radius: 8px;
                border: 1px solid #ddd;
                margin-top: 5px;
                font-size: 16px;
            }

            .message-box textarea {
                resize: vertical;
            }

        .btn-send {
            background-color: #007bff;
            color: white;
            font-size: 16px;
            width: 100%;
            padding: 10px;
            border-radius: 8px;
            border: none;
            margin-top: 20px;
        }

            .btn-send:hover {
                background-color: #0056b3;
            }

        .chat-box {
            max-height: 400px;
            overflow-y: auto;
            margin-bottom: 20px;
        }

        .chat-message {
            display: flex;
            margin-bottom: 15px;
        }

            .chat-message .sender {
                font-weight: bold;
                margin-right: 10px;
            }

            .chat-message .message {
                background-color: #f1f1f1;
                padding: 10px;
                border-radius: 8px;
                max-width: 80%;
            }

                .chat-message .message.sent {
                    background-color: #d1e7ff;
                }
    </style>
</head>
<body>
    <div class="chat-container">
        <h1>@ViewData["Title"]</h1>

        <!-- Send Message Form -->
        <form >
            <input type="hidden" id="SenderId" name="SenderId" value="@User.Identity.Name" />

            <div class="message-box">
                <label for="Message">Message</label>
                <textarea id="Message" name="Message" class="form-control" rows="4" required></textarea>
            </div>
            <button type="button" onclick="sendmsg()" id="sendMessageBtn" class="btn-send">Send Message</button>
        </form>

        <div class="chat-box" id="chatBox"></div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js"></script>
    <script>
        const hub = new signalR.HubConnectionBuilder()
            .withUrl("/chathub") 
            .build();

        // بناء الاتصال بالـ Hub
        hub.start().then(function() {
            console.log("SignalR Client connected");
        }).catch(function(err) {
            console.log("Error while establishing SignalR connection: " + err);
        });
        hub.on("receiveMessage",function(name,msg){
        $("#chatBox").append("<div class='chat-message'><span class='sender'>" + name + ":</span><span class='message'>" + msg + "</span></div>");
                        console.log(msg);
        });
        function sendmsg(){
          var msg=  $("#Message").val();
          hub.invoke("SendMsg",msg);


        }


     
    </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

</body>
</html>
